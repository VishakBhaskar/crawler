# Server Configuration
PORT=3000
NODE_ENV=production

# Redis Configuration (Railway will auto-provide REDIS_URL)
REDIS_URL=redis://localhost:6379

# Proxy Configuration
PROXY_URL=http://username:password@proxy.example.com:8080

# Crawler Settings
MAX_CONCURRENCY=5
MAX_REQUESTS_PER_MINUTE=30
DEFAULT_MAX_REQUESTS=100
MAX_LINKS_PER_PAGE=3
PAGE_TIMEOUT=30000

# Job Settings (TTL in seconds - 172800 = 2 days)
JOB_TTL=172800
RESULTS_TTL=172800
MAX_JOBS_PER_REQUEST=1000

# Browser Settings
MAX_BROWSER_INSTANCES=3
BROWSER_INSTANCE_TIMEOUT=300000

# Health Check
HEALTH_CHECK_INTERVAL=60000
